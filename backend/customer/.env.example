# Customer Service Configuration

# Server Configuration
PORT=3001
HOST=localhost
NODE_ENV=development

# Database Configuration - Customer specific database
MONGODB_URI=mongodb://localhost:27017/customer_db

# JWT Configuration  
JWT_SECRET=customer-secret-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1