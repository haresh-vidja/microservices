# ============================================
# Docker Compose Environment Variables
# ============================================
# Copy this file to .env and update with your values

# ============================================
# Security Keys (CHANGE IN PRODUCTION!)
# ============================================
JWT_SECRET=your-jwt-secret-key-change-in-production
SERVICE_SECRET=your-service-secret-key-change-in-production
ADMIN_SECRET=your-admin-secret-key-change-in-production

# ============================================
# Database Configuration
# ============================================

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=admin123
MONGO_DATABASE=microservices

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
POSTGRES_DB=microservices

# Redis
REDIS_PASSWORD=redis123

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BROKER_ID=1
KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:29092,PLAINTEXT_HOST://localhost:9092

# ============================================
# Service Ports
# ============================================
API_GATEWAY_PORT=3000
CUSTOMER_SERVICE_PORT=3001
SELLER_SERVICE_PORT=3002
PRODUCTS_SERVICE_PORT=3003
ORDERS_SERVICE_PORT=3004
MEDIA_SERVICE_PORT=3005
NOTIFICATION_SERVICE_PORT=3006
ADMIN_SERVICE_PORT=3007
FRONTEND_PORT=3008

# ============================================
# Email Configuration (for Notification Service)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=tls
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=Microservices Platform
SMTP_FROM_EMAIL=noreply@microservices.com

# ============================================
# Media Service Configuration
# ============================================
UPLOAD_MAX_SIZE=10485760
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# ============================================
# Frontend Configuration
# ============================================
REACT_APP_API_URL=http://localhost:3000
REACT_APP_MEDIA_URL=http://localhost:3005
REACT_APP_ENV=development

# ============================================
# Node Environment
# ============================================
NODE_ENV=development

# ============================================
# Monitoring Ports
# ============================================
KAFKA_UI_PORT=8080
ZOOKEEPER_PORT=2181
MONGO_EXPRESS_PORT=8081
PGADMIN_PORT=5050